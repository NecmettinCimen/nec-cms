<title>@TemaYonetimi.Find("anasayfaresimustuyazibaslik","Anasayfa Başlık")</title>
<!--====================================
=            Hero Section            =
=====================================-->
<section class="section gradient-banner">
	<div class="shapes-container">
		<div class="shape" data-aos="fade-down-left" data-aos-duration="1500" data-aos-delay="100"></div>
		<div class="shape" data-aos="fade-down" data-aos-duration="1000" data-aos-delay="100"></div>
		<div class="shape" data-aos="fade-up-right" data-aos-duration="1000" data-aos-delay="200"></div>
		<div class="shape" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="200"></div>
		<div class="shape" data-aos="fade-down-left" data-aos-duration="1000" data-aos-delay="100"></div>
		<div class="shape" data-aos="fade-down-left" data-aos-duration="1000" data-aos-delay="100"></div>
		<div class="shape" data-aos="zoom-in" data-aos-duration="1000" data-aos-delay="300"></div>
		<div class="shape" data-aos="fade-down-right" data-aos-duration="500" data-aos-delay="200"></div>
		<div class="shape" data-aos="fade-down-right" data-aos-duration="500" data-aos-delay="100"></div>
		<div class="shape" data-aos="zoom-out" data-aos-duration="2000" data-aos-delay="500"></div>
		<div class="shape" data-aos="fade-up-right" data-aos-duration="500" data-aos-delay="200"></div>
		<div class="shape" data-aos="fade-down-left" data-aos-duration="500" data-aos-delay="100"></div>
		<div class="shape" data-aos="fade-up" data-aos-duration="500" data-aos-delay="0"></div>
		<div class="shape" data-aos="fade-down" data-aos-duration="500" data-aos-delay="0"></div>
		<div class="shape" data-aos="fade-up-right" data-aos-duration="500" data-aos-delay="100"></div>
		<div class="shape" data-aos="fade-down-left" data-aos-duration="500" data-aos-delay="0"></div>
	</div>
	<div class="container">
		<div class="row align-items-center">
			<div class="col-md-6 order-2 order-md-1 text-center text-md-left">
				<h1 class="text-white font-weight-bold mb-4">@Html.Raw(TemaYonetimi.Find("anasayfaresimustuyazibaslik","Showcase your app with Small Apps"))</h1>
				<p class="text-white mb-5">@Html.Raw(TemaYonetimi.Find("anasayfaresimustuyaziicerik",@"Besides its beautiful design. Laapp is an incredibly rich core framework for you to
					showcase your App."))</p>
				<a href="@Html.Raw(TemaYonetimi.Find("anasayfaresimustubuttonurl","FAQ.html"))" class="btn btn-main-md">@Html.Raw(TemaYonetimi.Find("anasayfaresimustubutton","Download Now"))</a>
			</div>
			<div class="col-md-6 text-center order-1 order-md-2">
				<img class="img-fluid" src="@TemaYonetimi.Find("anasayfaresim","/images/mobile.png")" alt="screenshot">
			</div>
		</div>
	</div>
</section>
<!--====  End of Hero Section  ====-->

<section class="section pt-0 position-relative pull-top">
	<div class="container">
		<div class="rounded shadow p-5 bg-white">
			<div class="row">
                
                @foreach (var item in IcerikYonetimi.FindByKategoriUrl(TemaYonetimi.Find("anasayfailk3icerik3tane","haberler"), 3))
                {
                    
				<div class="col-lg-4 col-md-6 mt-5 mt-md-0 text-center">
					<h3 class="mt-4 text-capitalize h5 ">@item.Baslik</h3>
					<p class="regular text-muted">@item.Giris</p>
				</div>
                }
			</div>
		</div>
	</div>
</section>


@foreach (var item in IcerikYonetimi.FindByKategoriUrl(TemaYonetimi.Find("anasayfaikiciicerik","haberler"), 2).Select((value,i) => new {i, value}))
{
    
<!--==================================
=            Feature Grid            =
===================================-->
    @if(item.i % 2 == 0)
    {
        
    <section class="feature section pt-0">
	<div class="container">
		<div class="row">
			<div class="col-lg-6 ml-auto justify-content-center">
				<!-- Feature Mockup -->
				<div class="image-content" data-aos="fade-right">
					<img class="img-fluid" src="@item.value.ResimData" alt="@item.value.Baslik">
				</div>
			</div>
			<div class="col-lg-6 mr-auto align-self-center">
				<div class="feature-content">
					@Html.Raw(item.value.Giris)
				</div>
			</div>
		</div>
	</div>
</section>

    }
    else
    {
        
<section class="feature section pt-0">
	<div class="container">
		<div class="row">
			<div class="col-lg-6 ml-auto align-self-center">
				<div class="feature-content">
					@Html.Raw(item.value.Giris)
				</div>
			</div>
			<div class="col-lg-6 mr-auto justify-content-center">
				<!-- Feature mockup -->
				<div class="image-content" data-aos="fade-left">
					<img class="img-fluid" src="@item.value.ResimData" alt="@item.value.Baslik">
				</div>
			</div>
		</div>
	</div>
</section>
    }

<!--====  End of Feature Grid  ====-->
}

<!--==============================
=            Services            =
===============================-->
<section class="service section bg-gray">
	<div class="container-fluid p-0">
		<div class="row">
			<div class="col-lg-12">
				<div class="section-title">
					<h2>@Html.Raw(TemaYonetimi.Find("anasayfaservislerbaslik","An Interface For Lifestyle"))</h2>
					<p>@Html.Raw(TemaYonetimi.Find("anasayfaservisleraciklama",@"Small Apps makes
						it easy to stay on top of your Life Style. No late tasks. No gimmicks."))</p>
				</div>
			</div>
		</div>
		<div class="row no-gutters">
			<div class="col-lg-6 align-self-center">
				<!-- Feature Image -->
				<div class="service-thumb left" data-aos="fade-right">
					<img class="img-fluid" src="@Html.Raw(TemaYonetimi.Find("anasayfaservislerresim","/images/feature/iphone-ipad.jpg"))" alt="@Html.Raw(TemaYonetimi.Find("anasayfaservislerbaslik","An Interface For Lifestyle"))">
				</div>
			</div>
			<div class="col-lg-5 mr-auto align-self-center">
				<div class="service-box">
					<div class="row align-items-center">
						@for (var i = 0; i < 4; i++)
					   {
						   <div class="col-md-6 col-xs-12">
							<!-- Service 01 -->
							<div class="service-item">
								<!-- Icon -->
								<i class="@Html.Raw(TemaYonetimi.Find("anasayfaservisler"+(i+1)+"icon","ti-bookmark"))"></i>
								<!-- Heading -->
								<h3>@Html.Raw(TemaYonetimi.Find("anasayfaservisler"+(i+1)+"baslik","Easy Prototyping"))</h3>
								<!-- Description -->
								<p>@Html.Raw(TemaYonetimi.Find("anasayfaservisler"+(i+1)+"aciklama","Curabitur arcu erat, accumsan id imperdiet et, porttitor at sem. Curabitur aliquet quam id dui"))</p>
							</div>
						</div>
					   }
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


<!--=================================
=            Video Promo            =
==================================-->
