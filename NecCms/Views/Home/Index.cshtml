	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<!-- Testimonial Slider -->
				<div class="testimonial-slider owl-carousel owl-theme">
					
@foreach (var item in IcerikYonetimi.FindByKategoriUrl(TemaYonetimi.Find("anasayfamusteriyorumlari","haberler"), 3))
