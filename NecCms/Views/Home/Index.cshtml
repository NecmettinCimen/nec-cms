					<h2>@Html.Raw(TemaYonetimi.Find("anasayfavideobaslik","Watch Our Promo Video"))</h2>
					<!-- Promotional Speech -->
					<p>@Html.Raw(TemaYonetimi.Find("anasayfavideoaciklama",@"Vivamus suscipit tortor eget felis porttitor volutpat. Curabitur arcu erat, accumsan id imperdiet et,
						porttitor at sem. Vivamus"))</p>
