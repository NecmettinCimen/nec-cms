@model KategoriDto
<title>@Model.Isim</title>

<div class="site-section">
    <div class="container">
      <div class="row">
        <div class="col-lg-9">
          <div class="section-title">
            <span class="caption d-block small">Arama</span>
            <h2>@Model.Isim</h2>
          </div>
          
          @foreach(var icerik in Model.Icerikler){
            <div class="post-entry-2 d-flex">
                <div class="thumbnail order-md-2" style="background-image: url('images/img_h_4.jpg')"></div>
                <div class="contents order-md-1 pl-0">
                  <h2><a href="@icerik.KategoriUrl/@icerik.Url">@icerik.Baslik</a></h2>
                  <p class="mb-3">@icerik.Giris</p>
                  <div class="post-meta">
                    <span class="d-block"><a href="#">Necmettin</a> in </span>
                    <span class="date-read">@icerik.Tarih.Value.ToShortDateString() <span class="mx-1">&bullet;</span> 3 min read <span class="icon-star2"></span></span>
                  </div>
                </div>
              </div>
          }

        </div>
        <div class="col-lg-3">
          <div class="section-title">
            <h2>Popular Posts</h2>
          </div>

