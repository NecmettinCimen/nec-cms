      <div class="row">
        <div class="col-lg-6">
          <ul class="custom-pagination list-unstyled">
            @for (var i = 0; i < Model.IcerikSayisi / 10 + 1; i++)
            {
                @if (Model.SayfaNo == i)
                {
                    <li class="active">
                        @(i + 1)
                    </li>
                }
                else
                {
                    <li>
                        <a href="/Arama?arama=@Model.Isim&skip=@(i + 1)">@(i + 1)</a>
