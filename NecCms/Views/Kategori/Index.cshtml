@model KategoriDto
<title>@Model.Isim</title>
<div class="stage layout-C">
    <div class="stage-body">

        <div class="stage-0">
            <div class="body">
                <div class="breadcrumbs">
                    <div class="body">
                        <div itemscope itemtype="http://data-vocabulary.org/Breadcrumb" class="step">
                            <a href="/tr/" itemprop="url">
                                <span itemprop="title">
                                    Ana Sayfa </span>
                            </a>
                            <span class="sep">›</span>
                        </div>
                        <div itemscope itemtype="http://data-vocabulary.org/Breadcrumb" class="step">
                            <a href="@Model.Url" itemprop="url">
                                <span itemprop="title">
                                    @Model.Isim </span>
                            </a>
                            <span class="sep">›</span>
                        </div>
                    </div>
                </div>
                <div id="mainContent"></div>
                <div class="haber-grup" id="haber-grup">
                    <h1 class="page-title">@Model.Isim</h1>

                    @foreach(var item in Model.Icerikler){

                    <div class="box01e">
                        <h5><a href="@item.Kategori/@item.Url">@item.Baslik</a>
                            <span class="date">@item.Tarih.ToShortDateString()</span></h5>
                        <div class="spot">@item.Giris
                        </div>
                        <span class="devami"><a href="@item.Kategori/@item.Url">[Devamı]</a></span>
                        <div class="clear_b"></div>
                    </div>
                    }
                    <div id="loadiv"></div>

                    <div class="pages">
                        <a style="padding: 5px 9px;
                        margin-right: 5px;
                        margin-bottom: 5px;
                        line-height: 100%;
                        display: inline-block;
                        border: 1px solid #BDBDBD;
                        font-size: 1em;
                        color: #606060;" id="loadmore" onclick="loadMore()">
                            <h4>Daha Fazla Yükle</h4>
                        </a>
                    </div>
                    @section Scripts{

                    <script>
                        var skip = 1;
                        var kategori = '@Model.Url'.slice(1);
                        loadMore = () => {
                            fetch("/Kategori/Skip?kategori=" + kategori + "&skip=" + (skip * 5))
                                .then(res => res.json())
                                .then(res => {
                                    skip++;
                                    if (res.icerikler.length == 0) {
                                        $(document.body).getElement('#loadmore').remove()
                                        return
                                    }
                                    var html = "";
                                    res.icerikler.map(item => html += '<div class="box01e">' +
                                        '    <h5><a href="' + item.kategori + '/' + item.url + '">' + item.baslik + '</a>' +
                                        '        <span class="date">' + item.tarih + '</span></h5>' +
                                        '    <div class="spot">' + item.giris +
                                        '    </div>' +
                                        '    <span class="devami"><a href="' + item.kategori + '/' + item.url + '">[Devamı]</a></span>' +
                                        '    <div class="clear_b"></div>' +
                                        '</div>');

                                        $(document.body).getElement('#loadiv').append($('<div/>').html(html).text());
                                })
                        }
                    </script>
                    }
                </div>
            </div>
            <div class="clear"></div>
            <div class="bot"></div>
        </div>
        <div class="stage-sep">
            <div class="body"></div>
        </div>
        <div class="stage-1">
            <div class="body">
                <div class="page_navi">
                    <ul>
                        <li class="active"><a href="@Model.Menuler.Url">@Model.Menuler.Isim</a></li>
                        <ul>
                            @foreach(var m in Model.Menuler.Menuler){
                            <li class="page"><a style="color:@(Model.Url.Contains(m.Url)?" black":"grey")"
                                    href="@m.Url">@m.Isim</a></li>
                            }
                        </ul>
                        </li>
                    </ul>
                </div>
                <section class="node-content"></section>
            </div>
            <div class="clear"></div>
            <div class="bot"></div>
        </div>
        <div class="clear"></div>
        <div class="stage-bot"></div>
    </div>
</div>