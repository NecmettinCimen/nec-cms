<body class="body-wrapper" data-spy="scroll" data-target=".privacy-nav">


<nav class="navbar main-nav navbar-expand-lg px-2 px-sm-0 py-2 py-lg-0">
  <div class="container">
    <a class="navbar-brand" href="/"><img src="@Html.Raw(TemaYonetimi.Find("logo","/images/logo.png"))" alt="logo"></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="ti-menu"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
          @foreach (var m in MenuYonetimi.Menuler)
                                    {
                                        
                                            @if (m.Menuler.Count > 0)
                        {
                            <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="@m.Url" data-toggle="dropdown">@m.Isim <span><i class="ti-angle-down"></i></span>
          </a>
          <!-- Dropdown list -->
          <ul class="dropdown-menu">
              
                                                    @foreach (var m2 in m.Menuler)
                                    {
                                    <li><a class="dropdown-item" href="@m2.Url">@m2.Isim</a></li>                                        
                                    }
          </ul>
        </li>
                        }
                        else
                        {
        <li class="nav-item @@contact">
          <a class="nav-link" href="@m.Url">@m.Isim</a>
        </li>                            
                        }
                    }

        
      </ul>
    </div>
  </div>
</nav>
@RenderBody()

