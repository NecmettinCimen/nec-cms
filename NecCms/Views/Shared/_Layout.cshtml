            </ul>
          </div>
                        }
                        else
                        {
                                      <div class="block-2">
            <!-- links -->
            <ul>
              
              <li><a href="@m.Url"><h6>@m.Isim</h6></a></li>                                      
                                    
            </ul>
          </div>
        
                        }
      </div>

                    }

    </div>
