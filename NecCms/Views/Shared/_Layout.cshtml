                </div>
                <div class="body">
                    <div class="mob-menu">
                        <div id="mobMenuButton"></div>
                        <div id="mobMenuContainer"></div>
                    </div>
                    <div class="logo-overlay">
                        <a href="/">
                            <img src="@Html.Raw(TemaYonetimi.Find(kodu:"logo"))" alt="logo"/>
                        </a>
                    </div>
                    <div class="site-title">@Html.Raw(TemaYonetimi.Find("anasayfaresimustuyazibaslik"))</div>

                    <div id="flags">

                        <div class="site-search-wrap">
                            <div class="search site-search" data-type="">
                                <form action="/Arama" method="GET">
                                    <input type="text" value="Arama" class="text" name="arama">
                                    <input style="float:left" type="submit" class="ara" value="Ara ">
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="navi-wrap">
                        <div class="navi">
                            <div class="navi_top"></div>
                            <nav class="navi_body">
                                <ul class="menulist" id="siteMainMenu">
                                    @foreach (var m in MenuYonetimi.Menuler)
                                    {
                                        <li>
                                            <a href="@m.Url" data-tip="Sayfa:default">
                                                <i class=""></i>
                                                <span>@m.Isim</span>
                                            </a>
                                            @if (m.Menuler.Count > 0)
                                            {
                                                <ul>
                                                    @foreach (var m2 in m.Menuler)
                                                    {
                                                        <li>
                                                            <a href="@m2.Url" data-tip="Sayfa:default">
                                                                <i class=""></i>
                                                                <span>@m2.Isim</span>
                                                            </a>
                                                        </li>
                                                    }
                                                </ul>
                                            }
                                        </li>
                                    }

                                </ul>
                            </nav>
                            <div class="navi_bot"></div>
                        </div>
                    </div>

                </div>
            </div>

            <div id="content">
                @RenderBody()
            </div>
            <!--content-->
        </div>
