</section>

<!--====  End of Address and Map  ====-->
<section class="contact-form section">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h2 class="mb-5 text-center">Mail Gönderin</h2>
			</div>
			<div class="col-12">
                                    <form action="/iletisim/kaydet" onsubmit="send(this);return false;">
					<div class="row">
						<!-- Name -->
						<div class="col-md-6 mb-2">
							<input class="form-control main" type="text" placeholder="Ad Soyad" name="AdSoyad" required>
						</div>
						<!-- Email -->
						<div class="col-md-6 mb-2">
							<input class="form-control main" type="email" placeholder="Eposta" name="Eposta" required>
						</div>
						<!-- Message -->
						<div class="col-md-12 mb-2">
							<textarea class="form-control main" rows="10" placeholder="Mesajınız" name="Aciklama"></textarea>
						</div>
						<!-- Submit Button -->
						<div class="col-12 text-right">
							<button 
							class="btn btn-main-md g-recaptcha" 
        data-sitekey="6LfJfO4cAAAAADWA77mXDznaIe8kww4J_IoSSPU_" 
        data-callback='onSubmit' 
        data-action='submit'
>Gönder</button>

						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>

@section Scripts
{

	 <script>
	//6LdcM-0cAAAAANV-fqUQ2P5TVxNQJB1DDCXkzWo1
   function onSubmit(token) {
     document.getElementById("demo-form").submit();
   }
                async function send(oFormElement){
                        const formData = new FormData(oFormElement);
                    
                        try {
                            const response = await fetch(oFormElement.action, {
                                method: 'POST',
                                body: formData
                            });
                    
                            if (response.ok) {
                                alert("Başarılı! Mesajınız alındı.")
                            }
                    
                        } catch (error) {
                            console.error('Error:', error);
                        }
                }
    </script>
}
