<div style="width: 100%"><iframe width="100%" height="600" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="@Html.Raw(TemaYonetimi.Find("iletisimharitasrc","https://maps.google.com/maps?width=100%25&amp;height=600&amp;hl=en&amp;q=ankara%20t%C3%BCrkiye+(ankara)&amp;t=k&amp;z=17&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"))"><a href="http://www.gps.ie/">gps devices</a></iframe></div>				</div>
