@using System.Net
@using NecCms.Database
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8"/>
    <title>NECCMS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description"/>
    <meta content="MyraStudio" name="author"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/assets/images/favicon.ico">

    @RenderSection("Styles", false)


    <link asp-append-version="true" href="~/assets/plugins/datatables/dataTables.bootstrap4.css" rel="stylesheet" type="text/css"/>
    <link asp-append-version="true" href="~/assets/plugins/datatables/responsive.bootstrap4.css" rel="stylesheet" type="text/css"/>
    <link asp-append-version="true" href="~/assets/plugins/datatables/buttons.bootstrap4.css" rel="stylesheet" type="text/css"/>
    <link asp-append-version="true" href="~/assets/plugins/datatables/select.bootstrap4.css" rel="stylesheet" type="text/css"/>

    <link asp-append-version="true" href="~/assets/css/sweetalert2.min.css" rel="stylesheet"/>
    <link asp-append-version="true" href="~/assets/css/select2.min.css" rel="stylesheet"/>
    <!-- App css -->
    <link asp-append-version="true" href="~/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <link asp-append-version="true" href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css"/>
    <link asp-append-version="true" href="~/assets/css/theme.min.css" rel="stylesheet" type="text/css"/>

</head>

<body>

<!-- Begin page -->
<div id="layout-wrapper">

<header id="page-topbar">
    <div class="navbar-header">
        <!-- LOGO -->
        <div class="navbar-brand-box d-flex align-items-left">
            <a href="/" class="logo">
                <i class="mdi mdi-album"></i>
                <span>
                    Admin
                </span>
            </a>

            <button type="button" class="btn btn-sm mr-2 d-lg-none px-3 font-size-16 header-item waves-effect waves-light" id="vertical-menu-btn">
                <i class="fa fa-fw fa-bars"></i>
            </button>
        </div>

        <div class="d-flex align-items-center">



            <div class="dropdown d-inline-block ml-2">
                <button type="button" class="btn header-item waves-effect waves-light" id="page-header-user-dropdown"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="d-none d-sm-inline-block ml-1">@YetkiYonetimi.GetAdSoyad()</span>
                    <i class="mdi mdi-chevron-down d-none d-sm-inline-block"></i>
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item d-flex align-items-center justify-content-between" href="javascript:void(0)">
                        <span>Profil</span>
                    </a>
                    <a class="dropdown-item d-flex align-items-center justify-content-between" href="/Login/Logout">
                        <span>Çıkış</span>
                    </a>
                </div>
            </div>

        </div>
    </div>
</header>

<!-- ========== Left Sidebar Start ========== -->
<div class="vertical-menu">

    <div data-simplebar class="h-100">

        <!--- Sidemenu -->
        <div id="sidebar-menu">
            <!-- Left Menu Start -->
            <ul class="metismenu list-unstyled" id="side-menu">
                <li class="menu-title">Menuler</li>

                <li>
                    <a href="/" class="waves-effect">
                        <i class="feather-airplay"></i><span>Anasayfa</span>
                    </a>
                </li>
                <li>
                    <a href="/Menu" class="waves-effect">
                        <i class="feather-airplay"></i><span>Menu Yönetimi</span>
                    </a>
                </li>

                <li>
                    <a href="javascript: void(0);" class="has-arrow waves-effect">
                        <i class="feather-list"></i><span>İçerik Yönetimi</span>
                    </a>
                    <ul class="sub-menu" aria-expanded="false">
                        <li>
                            <a href="/Icerik/Ekle">Yazı Ekle</a>
                        </li>
                        <li>
                            <a href="/Icerik/Liste">Yazı Listesi</a>
                        </li>
                 @if (YetkiYonetimi.GetRol() == RolEnum.Admin)
                                 {
                                     <li>
                                         <a href="/IcerikTipleri">İçerik Tipleri Yönetimi</a>
                                     </li>
                                 }       
                 <li>
                     <a href="/IcerikTipDegerleri">İçerik Yönetimi</a>
                 </li>
                    </ul>
                </li>

                <li>
                    <a href="javascript: void(0);" class="has-arrow waves-effect">
                        <i class="feather-list"></i><span>Tema Yönetimi</span>
                    </a>
                    <ul class="sub-menu" aria-expanded="false">
                @if (YetkiYonetimi.GetRol() == RolEnum.Admin)
                {
                    <li>
                        <a href="/Tema/Yonetim">Parametreler</a>
                    </li>
                }
                        <li>
                            <a href="/Tema/Duzenle">Tema Düzenle</a>
                        </li>
                    </ul>
                </li>

                <li>
                    <a href="/Iletisim" class="waves-effect">
                        <i class="feather-airplay"></i><span>Gelen Kutusu</span>
                    </a>
                </li>

                @if (YetkiYonetimi.GetRol() == RolEnum.Admin)
                {
                    <li>
                        <a href="/Kullanici" class="waves-effect">
                            <i class="feather-airplay"></i><span>Yazar Yönetimi</span>
                        </a>
                    </li>    
                }
            </ul>

        </div>
        <!-- Sidebar -->
    </div>
</div>
<!-- Left Sidebar End -->
<!-- ============================================================== -->
<!-- Start right Content here -->
<!-- ============================================================== -->
<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-flex align-items-center justify-content-between">
                        <h4 class="mb-0 font-size-18 pageHeader"></h4>

                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item">
                                    <a href="javascript: void(0);" class="parentHeader"></a>
                                </li>
                                <li class="breadcrumb-item active pageHeader"></li>
                            </ol>
                        </div>

                    </div>
                </div>
            </div>
            <!-- end page title -->
            @RenderBody()
        </div> <!-- container-fluid -->
    </div>
    <!-- End Page-content -->


</div>
<!-- end main content-->

</div>

    <div id="bekletoast" class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="50000" style="position: absolute; top: 5rem; right: 4rem;">
        <div class="toast-header">
            <strong class="mr-auto">Admin</strong>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            İşleniyor.Lütfen bekleyiniz.
        </div>
    </div>
    <div id="basarilitoast" class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="2000" style="position: absolute; top: 5rem; right: 4rem;">
        <div class="toast-header">
            <strong class="mr-auto">Admin</strong>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            Başarılı. İşlem tamamlandı.
        </div>
    </div>
                                                
<!-- END layout-wrapper -->
<!-- Overlay-->
<div class="menu-overlay"></div>


<!-- jQuery  -->
<script asp-append-version="true" src="~/assets/js/jquery.min.js"></script>
<script asp-append-version="true" src="~/assets/js/bootstrap.bundle.min.js"></script>
<script asp-append-version="true" src="~/assets/js/metismenu.min.js"></script>
<script asp-append-version="true" src="~/assets/js/waves.js"></script>
<script asp-append-version="true" src="~/assets/js/simplebar.min.js"></script>
<script asp-append-version="true" src="~/assets/js/bootstrap-datepicker.min.js"></script>
<script asp-append-version="true" src="~/assets/js/bootstrap-datepicker.tr.min.js"></script>
<script asp-append-version="true" src="~/assets/js/select2.min.js"></script>
<script asp-append-version="true" src="~/assets/js/sweetalert2.min.js"></script>

<!-- App js -->
<script asp-append-version="true" src="~/assets/js/theme.js"></script>
<script asp-append-version="true" src="~/assets/js/crm-pages.js"></script>
<script asp-append-version="true" src="~/assets/js/crm-fn.js"></script>
<script asp-append-version="true" src="~/assets/js/crm.js"></script>


<script asp-append-version="true" src="~/assets/plugins/datatables/jquery.dataTables.min.js"></script>
<script asp-append-version="true" src="~/assets/plugins/datatables/dataTables.bootstrap4.js"></script>
<script asp-append-version="true" src="~/assets/plugins/datatables/dataTables.responsive.min.js"></script>
<script asp-append-version="true" src="~/assets/plugins/datatables/responsive.bootstrap4.min.js"></script>
<script asp-append-version="true" src="~/assets/plugins/datatables/dataTables.buttons.min.js"></script>
<script asp-append-version="true" src="~/assets/plugins/datatables/buttons.bootstrap4.min.js"></script>
<script asp-append-version="true" src="~/assets/plugins/datatables/buttons.html5.min.js"></script>
<script asp-append-version="true" src="~/assets/plugins/datatables/buttons.flash.min.js"></script>
<script asp-append-version="true" src="~/assets/plugins/datatables/buttons.print.min.js"></script>
<script asp-append-version="true" src="~/assets/plugins/datatables/dataTables.keyTable.min.js"></script>
<script asp-append-version="true" src="~/assets/plugins/datatables/dataTables.select.min.js"></script>
<script asp-append-version="true" src="~/assets/plugins/datatables/pdfmake.min.js"></script>
<script asp-append-version="true" src="~/assets/plugins/datatables/vfs_fonts.js"></script>

@RenderSection("Scripts", false)
</body>

</html>